<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @basket_item %>

    <%= link_to "Edit this basket item", edit_basket_item_path(@basket_item), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to basket items", basket_items_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this basket item", @basket_item, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
