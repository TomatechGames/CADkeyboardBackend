<div class="w-full">

  <% content_for :title, "Basket items" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Basket items</h1>
    <% if current_user.basket_items.length > 0 %>
      <%= button_to "Purchase all", basket_items_path+"/purchase_all", class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="keyboard_items" class="flex flex-wrap gap-2 items-center">
    <% @keyboard_items.each do |keyboard_item| %>
      <%= render keyboard_item %>
    <% end %>
  </div>
</div>
