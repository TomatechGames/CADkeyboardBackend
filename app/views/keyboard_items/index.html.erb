<div class="w-full">
  <% content_for :title, "Keyboard items" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Keyboard items</h1>
    <%= search_form_for @q, class: "mb-4" do |f| %>
      <div class="flex gap-3 align-items-center">
        <%= f.search_field :name_or_manufacturer_cont, class: "block shadow rounded-full border border-gray-400 outline-none w-72 px-2 py-2 w-full", placeholder: "Search by name or manufacturer..." %>
        <%= f.submit "Search", class: "rounded-full py-3 px-5 bg-blue-600 text-white block font-medium" %>
      </div>
    <% end %>
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to "New keyboard item", new_keyboard_item_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>
  <div id="keyboard_items" class="flex flex-wrap gap-2 items-center">
    <% @keyboard_items.each do |keyboard_item| %>
      <%= render keyboard_item %>
    <% end %>
  </div>
</div>
