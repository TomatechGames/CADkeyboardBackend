<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%# <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">Notice</p> %>

    <%= link_to "Back", keyboard_items_path, class: "ml-2 rounded-lg py-3 px-5 bg-blue-200 inline-block font-medium" %>
    <%= render @keyboard_item %>

    <% if user_signed_in? && current_user.admin? %>
      <%= link_to "Edit this keyboard item", edit_keyboard_item_path(@keyboard_item), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to "Destroy this keyboard item", @keyboard_item, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    <% end %>
  </div>
</div>
